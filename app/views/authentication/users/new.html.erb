<%= form_with(model: @user) do |form| %>
  <% @user.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div>
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "email@example.com", required: true %>
  </div>

  <div>
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "user name", required: true %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: "password", required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
